  <body class="w-100 b-whitesmoke">
    {{>header  }}
    <main class="my-4 mx-2">
      <section class="b-primary h-auto  mt-2 text-center py-2">
          <h1 class="fs-1 c-secondary uppercase">{{title}}</h1>
      </section>
      <section class="my-4">
        <h5>Bonjour {{firstname}}</h5>
      </section>
        <section class="my-4">
    
          <p>{{introtext}}</p>
          <p class="uppercase">description:</p>
          <p class="bold"> {{description}} </p>
       
        <div class='text-center'>

          <a href={{link}} >
            <button type='button' class='btn  btn-lg b-primary c-secondary my-4 '>
             Cliquer ici pour consulter
            </button>
  
